<% content_for :guide_heading do %>
  <%= render "govuk_publishing_components/components/heading", {
      text: presented_manual.title,
      font_size: "l",
      inverse: true,
      id: "manual-title",
      heading_level: 2,
      margin_bottom: 6,
  } %>
<% end %>
<%=
  render(
    'content_for_head_tag',
    description: "List of updates to '#{presented_manual.full_title}'.",
    title: 'Updates - ' + presented_manual.full_title,
  )
%>
<%= render 'header', presented_manual: presented_manual %>
<%=
  render(
    'manual_breadcrumbs',
    presented_manual: presented_manual
  )
%>
<div class="govuk-grid-row">
  <%= render 'manual_updates', presented_manual: presented_manual %>
</div>
